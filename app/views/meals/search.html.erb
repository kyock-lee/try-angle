<%= render "shared/header" %>

<%= form_with(url: search_meals_path, local: true, method: :get, class: "search-form text-center p-3 ") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<div class='meal-contents'>
    <ul class='meal-list'>
     <%# 食事の写真データ全てを展開 %>
      <% @meals.each do |meal| %>
        <li class='list'>
          <div class='meal-lists'>
            <div class='item-img-content'>
              <%= image_tag meal.image, class: "item-img" %>
            </div>
            <h3 class='item-date'>
              <%= meal.date %>
            </h3>
            <div class="meal-description-box">
              <span><%= meal.description %></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
</div>

<%= render "shared/footer" %>