<%= render "shared/header" %>

<div class="input-weight-main bg-light py-5 ">
  <div class="input-container bg-white text-center">
    <h3 class="input-weight-container">記録する</h3>

    <%= form_with(model: @meal, local: true) do |form| %>
        <div>
          <%= form.file_field :image, id:"image" %>
        </div>
        <div class='input-wrap py-3 my-3 '>
          <%= raw sprintf(
                  form.date_select(
                    :date,
                    class:'select-birth',
                    id:"date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2021,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
        <div class="input-category-main py-3 my-3">
          <%= form.text_area :description, class:"meals-text", id:"meals-info", placeholder:"食事の内容を入力してください" ,rows:"4" ,maxlength:"1000" %>
        </div>
        <div class=" py-3 my-3">
          <%= form.submit "送信" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>