<%= render "shared/header" %>

<div class="bg-white p-5 ">

  <div class="text-center">
    <%= form_with(url: search_trainings_path, local: true, method: :get, class: "search-form text-center p-3 ") do |form| %>
      <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input bg-light" %>
      <%= form.submit "検索", class: "search-btn bg-light" %>
    <% end %>
  </div>

  <div class='training-contents '>
    <div class="container bg-white text-center border border-dark">
      <% @training.each do |training| %>
          <table class="table table-sm table-hover">
            <thead>
              <tr>
                <th style="width:100px">#</th>
                <th style="width:130px">日付</th>
                <th style="width:400px">種目</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td><%= training.date %></td>
                <td><%= training.description %></td> 
              </tr>
            </tbody>
          </table>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>